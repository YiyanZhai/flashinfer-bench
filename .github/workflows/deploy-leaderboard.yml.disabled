name: Deploy Leaderboard to GitHub Pages

on:
  push:
    branches: [ main ]
    paths:
      - 'tools/leaderboard/**'
      - 'dataset/**'
      - '.github/workflows/deploy-leaderboard.yml'
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: pages
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: '3.12'
          cache: pip
          cache-dependency-path: tools/leaderboard/requirements.txt

      - name: Install dependencies
        working-directory: tools/leaderboard
        run: |
          pip install -r requirements.txt

      - name: Generate static site
        working-directory: tools/leaderboard
        run: |
          python static_generator.py \
            --output ./public \
            --base-url / \
            --dataset-path ../../dataset

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: tools/leaderboard/public

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
